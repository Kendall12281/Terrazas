@model Infraestructure.Model.ViewModel.Login.ViewModelLogin
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/Content/logo/cover.ico">
    <script src="~/Content/tailwind.min.js"></script>
    <link rel="stylesheet" href="~/Content/Site.css">
    <title>Login</title>
</head>
<body style="background-color: #35495e">

    <section id="navbar-css">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto">
            <div class="w-full md:w-8/12 xl:w-4/12">
                <div class="p-3 flex justify-center overflow-hidden">

                    <img class="h-auto max-w-lg rounded-lg" src="~/Content/logo/cover.png" alt="image description">

                </div>
                <div class="m-1 p-6 space-y-4 md:space-y-6 sm:p-8">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))

                    {
                        <form class="space-y-4 md:space-y-6">
                            @*@Html.AntiForgeryToken()*@
                            <div>
                                <label style="color:white">
                                    @Html.LabelFor(model => model.Email)
                                </label>
                                <div class="mb-8 mt-2">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "bg-white border sm:text-sm rounded-lg block w-full p-2.5", @placeholder = "name@company.com" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-400" })
                                </div>
                            </div>

                            <div>
                                <label style="color:white">
                                    @Html.LabelFor(model => model.Password)
                                </label>
                                <div class="mb-8 mt-2">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "bg-white border sm:text-sm rounded-lg block w-full p-2.5", @placeholder = "••••••••" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-red-400" })
                                </div>
                            </div>

                            @if (ViewBag.isUserDisabled)
                            {
                                <div class="flex justify-center bg-red-400 rounded mb-8 mx-auto">
                                    <h1 class="m-3 text-white">Wrong Email or Password</h1>
                                </div>
                            } 
                            @if (ViewBag.wrongCredentials)
                            {
                                <div class="flex justify-center bg-red-400 rounded mb-8 mx-auto">
                                    <h1 class="m-3 text-white">Wrong Email or Password</h1>
                                </div>
                            }

                            <div class="flex justify-center">

                                <input type="submit" value="Sign In" class="w-full text-white  hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center lg:w-6/12" style="margin-bottom: 1rem; background-color: #42b883" />
                            </div>

                        </form>
                    }
                </div>
            </div>
        </div>

    </section>
</body>
</html>


