@model Infraestructure.Model.ViewModel.Plan.ViewModelEditPlan
@{
    ViewBag.Title = "Edit";
}
<head>
    <link rel="stylesheet" href="~/Content/Site.css">
</head>
@using (Html.BeginForm("Edit", "Plan", FormMethod.Post))
{
<div class="w-full md:w-8/12 xl:w-4/12">
    @Html.ValidationSummary(true, "")

    <div class="hidden">
        <label>
            @Html.LabelFor(model => model.Id)
        </label>
        <div class="mb-8 ">
            @Html.EditorFor(model => model.Id)
            @Html.ValidationMessageFor(model => model.Name, "")
        </div>
    </div>
    <div>
        <label>
            @Html.LabelFor(model => model.Name)
        </label>
        <div class="mb-8 ">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "bg-white border sm:text-sm rounded-lg block w-full p-2.5" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-red-500" })
        </div>
    </div>
    <div>
        <label>
            @Html.LabelFor(model => model.Description)
        </label>
        <div class="mb-8">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = " bg-white border sm:text-sm rounded-lg block w-full p-2.5" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-red-500" })
        </div>
    </div>

    <div>
       

        <div class="mb-8">

            <ul class="w-48 text-sm font-medium  bg-white border border-gray-200 rounded-lg">
                @for(int i = 0; i < Model.listSelectedItems.Count(); i++)
                {

                    <li class="w-full border-b border-gray-200 rounded-t-lg">
                        <div class="flex items-center p-2 pl-3 mb-3 mt-3">
                            @Html.CheckBoxFor(model => model.listSelectedItems[i].Selected)
                            <label class="ml-3">
                                @Model.listSelectedItems[i].Text
                            </label>
                            @Html.HiddenFor(model => model.listSelectedItems[i].Value)
                            @Html.HiddenFor(model => model.listSelectedItems[i].Text)
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="flex gap-4">
        <input type="submit" value="Save Changes" class="font-medium rounded-lg text-sm px-5 py-2.5 text-center btn-green-color shadow" />
        <button class="font-medium rounded-lg text-sm px-5 py-2.5 text-center btn-blue-color shadow">
            @Html.ActionLink("Back to List ", "Index")
        </button>
    </div>



</div>

}
