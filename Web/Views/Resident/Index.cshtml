@model IEnumerable<Infraestructure.Model.Resident>

@{
    ViewBag.Title = "Index";
    ViewBag.residents = Model;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>DataTables </title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <link href="~/Content/DataTable/styles.css" rel="stylesheet" />
    <link href="~/Content/DataTable/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTable/responsive.dataTables.min.css" rel="stylesheet" />





</head>

<body>


    <!--Container-->
    <div class="mt-5" style="margin-right:2rem; overflow:hidden">




        <!--Card-->
        <div class="p-8 mt-5 lg:mt-0 rounded shadow bg-white">


            <table id="example" class="stripe hover" style="width:100%; padding-top: 1em;  padding-bottom: 1em;">
                <thead>
                    <tr>
                        <th data-priority="1">Email</th>
                        <th data-priority="2">House Number</th>
                        <th data-priority="3">Name</th>
                        <th data-priority="4">Last Name</th>
                        <th data-priority="5">Person Count</th>
                        <th data-priority="6">Cars Count</th>
                        <th data-priority="7">Started Date</th>
                        <th data-priority="8">House State</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailUser)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HouseNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PersonCount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarsCount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HouseState)
                            </td>
                            <td class="flex gap-4">
                                <button class="font-medium rounded-lg text-sm px-5 py-2.5 text-center btn-green-color shadow">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.EmailUser })
                                </button>
                                <button class="font-medium rounded-lg text-sm px-5 py-2.5 text-center btn-red-color shadow">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.EmailUser })
                                </button>
                            </td>
                        </tr>


                    }
                </tbody>

            </table>


        </div>
        <!--/Card-->


    </div>
    <!--/container-->
    <!-- jQuery -->
    <script type="text/javascript" src="~/Content/DataTable/js/jquery-3.4.1.min.js"></script>

    @*Datatables*@ 
    <script src="~/Content/DataTable/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/DataTable/js/dataTables.responsive.min.js"></script>

   

    <script>
        $(document).ready(function () {

            var table = $('#example').DataTable({
                responsive: true
   
            })
                .columns.adjust()
                .responsive.recalc();
        });
    </script>

</body>

</html>

